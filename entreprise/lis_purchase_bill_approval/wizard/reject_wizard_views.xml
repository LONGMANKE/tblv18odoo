<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_reject_wizard_form" model="ir.ui.view">
        <field name="name">view.reject.wizard.form</field>
        <field name="model">reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button string="Reject" name="action_reject" type="object" class="oe_highlight"/>
                    <button string="Reject &amp; Cancel" name="action_reject_cancel" type="object" class="oe_highlight" confirm="This is a permanent rejection and you will not be able to reuse this"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>